<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

	<!-- 自动扫描所有注解 -->
	<context:annotation-config />
	<context:component-scan base-package="com.ictwsn"></context:component-scan>
	<!-- <context:component-scan base-package="com.ictwsn.utils"></context:component-scan> -->

	<mvc:annotation-driven />

	<!-- configure the InternalResourceViewResolver -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver"
		id="internalResourceViewResolver">
		<!-- 前缀 -->
		<property name="prefix" value="/" />
		<!-- 后缀 -->
		<property name="suffix" value=".jsp" />
	</bean>
	<!-- 引入Mongodb配置 -->
	<import resource="classpath:mongo-config.xml" />
	<!-- 引入MySQL配置 -->
	<import resource="classpath:mysql-config.xml" />
	<!-- 引入Redis配置 -->
	<import resource="classpath:redis-config.xml" />

	<!-- 注解激活 -->
	<bean
		class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" />
	<bean
		class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" />

	<!-- SpingMVC权限拦截 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean id="loginInterceptor" class="com.ictwsn.utils.LoginInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>

	<!-- 定时器的配置 -->
	<!-- 包装任务类 -->
	<bean name="Job" class="com.ictwsn.SimulationInsert"></bean>
	<bean id="job1"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="Job"></property>
		<property name="targetMethod" value="startJob"></property>
	</bean>
	<!-- 触发类 -->
	<!-- 表示每隔就执行 -->
	<!-- <value>0/1 * * * * ? *</value> -->
	<bean id="doJob1Trigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="job1"></property>
		<property name="cronExpression">
			<!-- 例：每天晚上16点15分开始执行,这里可填写相应表达式 -->
			<!-- <value>00 15 16 * * ?</value> -->
			<value>0/10 * * * * ? *</value>
		</property>
	</bean>
	<!-- 调度工厂 -->
	<bean id="startQuartz" lazy-init="false" autowire="no"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="doJob1Trigger" />
			</list>
		</property>
	</bean>


	<!-- SpringMVC启动后的执行类 -->
	<bean id="initialAction" class="com.ictwsn.utils.InitialAction"></bean>




</beans>